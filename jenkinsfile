pipeline {
    agent any
    stages {
        stage('one') {
            steps {
                echo 'Hi, this is a demo declarative pipeline (code)'
            }
        }
        stage('Two') {
            steps {
                input 'Do you want to proceed?'
            }
        }
        stage('Three') {
            when{
                not{
                    branch 'main'
                }
            }
            steps {
                echo 'Hi'
            }
        }
        stage('Four') {
            parallel {
                stage('Unit Tests') {
                    steps {
                        echo 'Running Unit Tests...'
                    }
                }
                stage('Integration Tests') {
                    agent {
                        docker {
                            reuseNode false
                            image 'ubuntu'
                        }
                    }
                    steps {
                        echo 'Running the integration test...'
                    }
                }
            }
        }
    }
}
